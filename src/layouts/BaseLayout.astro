---
import { Image } from 'astro:assets'; // Import Image for favicon
import '../styles/globals.css';
import favicon from '../assets/favicon.svg'; // Import the favicon

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { 
  title, 
  description = "Expert deck builders in Anchorage serving South Anchorage, Hillside & Eagle River. Custom composite & cedar decks engineered for Alaska winters.", 
  ogImage 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <link rel="icon" type="image/svg+xml" href={favicon.src} />
    
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-RD2XZW9K8V"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-RD2XZW9K8V');
    </script>
    
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" defer></script>
  </head>
  <body class="bg-stone-950 text-stone-100 font-sans">
    <slot />
  </body>
</html>
