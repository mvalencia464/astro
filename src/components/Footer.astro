---
import QuoteForm from './QuoteForm';
---

<style>
  .gradient-border-top {
    background: linear-gradient(to right, transparent, #92400e, transparent);
    height: 1px;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }
</style>

<footer class="bg-stone-950 pt-32 pb-12 relative overflow-hidden">
  <!-- Gradient border top -->
  <div class="absolute top-0 left-0 w-full gradient-border-top"></div>

  <div class="container mx-auto px-6 relative z-10 max-w-6xl">
    <!-- Main Footer Content -->
    <div class="flex flex-col lg:flex-row justify-between gap-20 mb-24">
      <!-- Left Section: Ready to Build + Contact Info + Map -->
      <div class="lg:w-1/2">
        <h2 class="text-6xl md:text-8xl font-display font-bold uppercase leading-tight mb-12">
          Ready to <br /> <span class="text-orange-600">Build?</span>
        </h2>
        <p class="text-xl text-stone-400 max-w-md mb-12">
          Schedule your complimentary design consultation today. Let's discuss how to elevate your property value and lifestyle.
        </p>

        <!-- Contact Information -->
        <div class="flex flex-col gap-6 mb-12">
          <div class="flex items-center gap-4 text-lg">
            <div class="w-10 h-10 bg-stone-900 flex items-center justify-center rounded-full text-orange-500 shrink-0">
              <i class="fas fa-phone"></i>
            </div>
            <span class="font-bold tracking-wider">(907) 782-4043</span>
          </div>
          <div class="flex items-center gap-4 text-base md:text-lg">
            <div class="w-10 h-10 bg-stone-900 flex items-center justify-center rounded-full text-orange-500 shrink-0">
              <i class="fas fa-envelope"></i>
            </div>
            <span class="font-bold tracking-wide break-all">CONTACT@DECKMASTERSAK.COM</span>
          </div>
          <div class="flex items-center gap-4 text-lg">
            <div class="w-10 h-10 bg-stone-900 flex items-center justify-center rounded-full text-orange-500 shrink-0">
              <i class="fas fa-map-pin"></i>
            </div>
            <span class="font-bold tracking-wider">625 W 59TH AVE UNIT J, ANCHORAGE, AK 99518</span>
          </div>
          <div class="flex items-center gap-4 text-lg">
            <div class="w-10 h-10 bg-stone-900 flex items-center justify-center rounded-full text-orange-500 shrink-0">
              <i class="fas fa-clock"></i>
            </div>
            <span class="font-bold tracking-wider">7:30 AM - 7:00 PM, SUN - SAT</span>
          </div>
        </div>

        <!-- Google Maps Embed -->
        <div class="w-full rounded-sm overflow-hidden border border-stone-800 relative group">
          <div class="w-full h-64 relative">
            <iframe
              title="Deck Masters location in Anchorage, Alaska on Google Maps"
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2853.5566334411346!2d-149.8942242!3d61.1676417!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x56c891cae1357399%3A0xd7b37a2095289a27!2sDeck%20Masters%20AK!5e1!3m2!1sen!2sus!4v1763737932256!5m2!1sen!2sus"
              width="100%"
              height="100%"
              style="border: 0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
          </div>
          <div class="bg-stone-900 p-4 flex justify-between items-center border-t border-stone-800">
            <div class="flex items-center gap-2">
              <img src="https://www.google.com/images/branding/googlelogo/2x/googlelogo_light_color_92x30dp.png" alt="Google" class="h-5 opacity-80" />
              <span class="text-xs font-bold uppercase tracking-wider text-stone-400">Business Profile</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="font-bold text-white">4.9</span>
              <div class="flex text-orange-500">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
              </div>
              <span class="text-xs text-stone-500">(120 Reviews)</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Section: Quote Form + Testimonials -->
      <div class="lg:w-1/2">
        <!-- Quote Form -->
        <QuoteForm client:load />

        <!-- Footer Testimonials Carousel -->
        <div class="mt-8 h-24 flex flex-col justify-center">
          <div class="testimonial-slide">
            <p class="text-stone-300 font-light italic text-lg leading-relaxed mb-2">
              "From the initial consultation to the final product... Jordan gave us great recommendations."
            </p>
            <div class="flex items-center gap-2">
              <div class="h-px w-8 bg-orange-600"></div>
              <span class="text-stone-500 text-xs font-bold uppercase tracking-widest">Anton Szender</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- SEO Sitemap Section -->
    <div class="border-t border-stone-900 py-12">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-8">
        <div>
          <h4 class="text-stone-300 font-bold uppercase text-xs mb-4 tracking-widest">Services</h4>
          <ul class="space-y-2">
            <li><a href="#" class="text-stone-500 hover:text-stone-300 text-xs uppercase">Composite Decking</a></li>
            <li><a href="#" class="text-stone-500 hover:text-stone-300 text-xs uppercase">Hardwood Decks</a></li>
            <li><a href="#" class="text-stone-500 hover:text-stone-300 text-xs uppercase">Outdoor Living</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-stone-300 font-bold uppercase text-xs mb-4 tracking-widest">Company</h4>
          <ul class="space-y-2">
            <li><a href="#" class="text-stone-500 hover:text-stone-300 text-xs uppercase">About Us</a></li>
            <li><a href="#" class="text-stone-500 hover:text-stone-300 text-xs uppercase">Our Process</a></li>
            <li><a href="#" class="text-stone-500 hover:text-stone-300 text-xs uppercase">Portfolio</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-stone-300 font-bold uppercase text-xs mb-4 tracking-widest">Neighborhoods</h4>
          <ul class="space-y-2">
            <li><a href="/areas/anchorage" class="text-stone-500 hover:text-stone-300 text-xs uppercase">Anchorage</a></li>
            <li><a href="/areas/eagle-river" class="text-stone-500 hover:text-stone-300 text-xs uppercase">Eagle River</a></li>
            <li><a href="/areas/girdwood" class="text-stone-500 hover:text-stone-300 text-xs uppercase">Girdwood</a></li>
            <li><a href="/areas/wasilla" class="text-stone-500 hover:text-stone-300 text-xs uppercase">Wasilla</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-stone-300 font-bold uppercase text-xs mb-4 tracking-widest">Legal</h4>
          <ul class="space-y-2">
            <li><a href="#" class="text-stone-500 hover:text-stone-300 text-xs uppercase">Privacy Policy</a></li>
            <li><a href="#" class="text-stone-500 hover:text-stone-300 text-xs uppercase">Terms of Service</a></li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Bottom Footer -->
    <div class="border-t border-stone-900 pt-8 flex flex-col md:flex-row justify-between items-center gap-6 text-stone-600 text-xs uppercase tracking-widest">
      <div class="flex items-center gap-2 font-bold text-stone-400">
        <span>DECK MASTERS</span>
      </div>
      <div class="flex flex-wrap justify-center gap-8">
        <a href="#" class="hover:text-white transition-colors">Site Info</a>
        <a href="#" class="hover:text-white transition-colors">Alaska Service Area</a>
        <a href="#" class="hover:text-white transition-colors">Deck Building</a>
        <a href="#" class="hover:text-white transition-colors">Now Hiring</a>
      </div>
      <div class="flex gap-4">
        <a href="#" class="w-8 h-8 border border-stone-800 flex items-center justify-center rounded-full hover:bg-orange-600 hover:border-orange-600 hover:text-white transition-all">
          <i class="fab fa-instagram text-sm"></i>
        </a>
        <a href="#" class="w-8 h-8 border border-stone-800 flex items-center justify-center rounded-full hover:bg-orange-600 hover:border-orange-600 hover:text-white transition-all">
          <i class="fab fa-facebook text-sm"></i>
        </a>
        <a href="#" class="w-8 h-8 border border-stone-800 flex items-center justify-center rounded-full hover:bg-orange-600 hover:border-orange-600 hover:text-white transition-all">
          <i class="fab fa-twitter text-sm"></i>
        </a>
      </div>
    </div>
  </div>
</footer>

<script>
  // Testimonial rotation
  const testimonials = [
    { quote: "From the initial consultation to the final product... Jordan gave us great recommendations.", author: "Anton Szender" },
    { quote: "I had a general idea of what I wanted... I ended up with front and back decks that I love.", author: "Shelly Wells" },
    { quote: "Professional, precise, promptâ€”clean and accurate. Perfection.", author: "Ruth McNearney" }
  ];

  let currentTestimonial = 0;
  const testimonialSlide = document.querySelector('.testimonial-slide');

  if (testimonialSlide) {
    function rotateTestimonial() {
      currentTestimonial = (currentTestimonial + 1) % testimonials.length;
      const current = testimonials[currentTestimonial];
      testimonialSlide.innerHTML = `
        <p class="text-stone-300 font-light italic text-lg leading-relaxed mb-2">
          "${current.quote}"
        </p>
        <div class="flex items-center gap-2">
          <div class="h-px w-8 bg-orange-600"></div>
          <span class="text-stone-500 text-xs font-bold uppercase tracking-widest">${current.author}</span>
        </div>
      `;
    }

    setInterval(rotateTestimonial, 6000);
  }
</script>
