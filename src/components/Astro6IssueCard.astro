---
export interface Props {
  id: string;
  title: string;
  category: string;
  severity: 'critical' | 'high' | 'medium' | 'low';
  status: 'solved' | 'potential' | 'in-progress';
  symptom: string;
  description: string;
  solution: string;
  codeExample: { before: string; after: string };
  docLink: string;
  notes: string;
}

const {
  id,
  title,
  category,
  severity,
  status,
  symptom,
  description,
  solution,
  codeExample,
  docLink,
  notes,
} = Astro.props;

const severityConfig = {
  critical: {
    card: 'bg-white border-red-200 shadow-red-100',
    accent: 'bg-red-600',
    badge: 'bg-red-100 text-red-700 border-red-200'
  },
  high: {
    card: 'bg-white border-orange-200 shadow-orange-100',
    accent: 'bg-orange-500',
    badge: 'bg-orange-100 text-orange-700 border-orange-200'
  },
  medium: {
    card: 'bg-white border-amber-200 shadow-amber-100',
    accent: 'bg-amber-500',
    badge: 'bg-amber-100 text-amber-700 border-amber-200'
  },
  low: {
    card: 'bg-white border-blue-200 shadow-blue-100',
    accent: 'bg-blue-500',
    badge: 'bg-blue-100 text-blue-700 border-blue-200'
  },
};

const statusBadges = {
  solved: 'bg-emerald-100 text-emerald-700 border-emerald-200',
  'in-progress': 'bg-sky-100 text-sky-700 border-sky-200',
  potential: 'bg-violet-100 text-violet-700 border-violet-200',
};
---

<div
  class={`group relative rounded-3xl border-2 p-8 transition-all hover:shadow-xl ${severityConfig[severity].card}`}
  data-issue-id={id}
  data-category={category}
  data-severity={severity}
  data-status={status}
>
  <!-- Severity Accent Bar -->
  <div class={`absolute left-0 top-12 bottom-12 w-1.5 rounded-r-full ${severityConfig[severity].accent}`}></div>

  <!-- Header -->
  <div class="mb-8 flex flex-col md:flex-row md:items-start justify-between gap-6">
    <div class="flex-1">
      <div class="flex items-center gap-3 mb-2">
        <span class={`inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-bold border ${statusBadges[status]}`}>
          {status.charAt(0).toUpperCase() + status.slice(1).replace('-', ' ')}
        </span>
        <span class={`inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-bold border ${severityConfig[severity].badge}`}>
          {severity.charAt(0).toUpperCase() + severity.slice(1)} Severity
        </span>
      </div>
      <h3 class="text-2xl font-extrabold text-slate-900 tracking-tight">{title}</h3>
      <p class="text-sm font-semibold text-slate-500 uppercase tracking-widest mt-1">{category}</p>
    </div>
    
    <div class="flex items-center gap-3">
      <a href={docLink} target="_blank" rel="noopener noreferrer"
        class="inline-flex items-center justify-center rounded-xl bg-slate-100 px-4 py-2 text-sm font-bold text-slate-700 hover:bg-slate-200 transition-colors">
        Documentation
        <svg class="ml-1.5 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>

  <div class="grid lg:grid-cols-2 gap-10">
    <!-- Left Column: Context -->
    <div class="space-y-6">
      <div class="bg-slate-50 rounded-2xl p-5 border border-slate-100">
        <h4 class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-2 flex items-center gap-2">
          <svg class="w-4 h-4 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          Symptom
        </h4>
        <p class="text-slate-700 font-medium leading-relaxed">{symptom}</p>
      </div>

      <div>
        <h4 class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-2">What's happening</h4>
        <p class="text-slate-600 leading-relaxed">{description}</p>
      </div>

      <div class="bg-emerald-50/50 rounded-2xl p-5 border border-emerald-100">
        <h4 class="text-xs font-bold text-emerald-600 uppercase tracking-widest mb-2 flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          The Solution
        </h4>
        <p class="text-slate-700 font-semibold leading-relaxed">{solution}</p>
      </div>
    </div>

    <!-- Right Column: Code -->
    <div class="space-y-6">
      <div class="flex items-center justify-between mb-2">
        <h4 class="text-xs font-bold text-slate-400 uppercase tracking-widest">Code Implementation</h4>
        <button
          class="copy-button inline-flex items-center gap-1.5 rounded-lg bg-slate-900 px-3 py-1.5 text-xs font-bold text-white hover:bg-slate-800 transition-colors shadow-sm"
          data-code={JSON.stringify(codeExample)}>
          <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
          </svg>
          Copy Change
        </button>
      </div>

      <div class="space-y-4">
        <!-- Before Block -->
        <div class="overflow-hidden rounded-xl border border-slate-200 shadow-sm">
          <div class="bg-slate-100 px-4 py-2 border-b border-slate-200 flex items-center justify-between">
            <span class="text-[10px] font-black uppercase tracking-tighter text-slate-400">Before</span>
            <div class="flex gap-1">
              <div class="w-2 h-2 rounded-full bg-slate-300"></div>
              <div class="w-2 h-2 rounded-full bg-slate-300"></div>
              <div class="w-2 h-2 rounded-full bg-slate-300"></div>
            </div>
          </div>
          <pre class="bg-[#0f172a] p-5 text-[13px] font-mono leading-relaxed text-slate-300 overflow-x-auto selection:bg-blue-500/30"><code>{codeExample.before}</code></pre>
        </div>

        <!-- After Block -->
        <div class="overflow-hidden rounded-xl border border-emerald-200 shadow-sm ring-1 ring-emerald-500/10">
          <div class="bg-emerald-50 px-4 py-2 border-b border-emerald-100 flex items-center justify-between">
            <span class="text-[10px] font-black uppercase tracking-tighter text-emerald-600">After (Corrected)</span>
            <div class="flex gap-1">
              <div class="w-2 h-2 rounded-full bg-emerald-300"></div>
              <div class="w-2 h-2 rounded-full bg-emerald-300"></div>
              <div class="w-2 h-2 rounded-full bg-emerald-300"></div>
            </div>
          </div>
          <pre class="bg-[#0f172a] p-5 text-[13px] font-mono leading-relaxed text-emerald-50 overflow-x-auto selection:bg-emerald-500/30"><code>{codeExample.after}</code></pre>
        </div>
      </div>
    </div>
  </div>

  <!-- Additional Notes -->
  {notes && (
    <div class="mt-8 pt-6 border-t border-slate-100">
      <div class="flex items-start gap-3">
        <div class="mt-1 flex-shrink-0 w-5 h-5 rounded-full bg-amber-100 flex items-center justify-center text-amber-600 font-bold text-[10px]">!</div>
        <p class="text-sm text-slate-500 italic"><span class="font-bold text-slate-700 not-italic uppercase tracking-tighter text-[10px] mr-1.5">Note:</span>{notes}</p>
      </div>
    </div>
  )}
</div>

<script>
  // Copy to clipboard functionality
  document.querySelectorAll('.copy-button').forEach(button => {
    button.addEventListener('click', async () => {
      const codeData = JSON.parse(button.getAttribute('data-code') || '{}');
      const textToCopy = `// BEFORE:\n${codeData.before}\n\n// AFTER:\n${codeData.after}`;
      
      try {
        await navigator.clipboard.writeText(textToCopy);
        const originalHTML = button.innerHTML;
        button.innerHTML = '<svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" /></svg> Copied!';
        button.classList.replace('bg-slate-900', 'bg-emerald-600');
        
        setTimeout(() => {
          button.innerHTML = originalHTML;
          button.classList.replace('bg-emerald-600', 'bg-slate-900');
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  });
</script>
