---
import { Image } from 'astro:assets'; // Import Image for favicon
import { ClientRouter } from 'astro:transitions';
import '../styles/globals.css';
import favicon from '../assets/favicon.svg'; // Import the favicon
import LocalSEO from '../components/LocalSEO.astro';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  serviceName?: string;
  cityName?: string;
  region?: string;
  canonical?: string;
}

const { 
  title, 
  description,
  ogImage,
  serviceName,
  cityName,
  region,
  canonical
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <LocalSEO 
      title={title} 
      description={description} 
      serviceName={serviceName} 
      cityName={cityName} 
      region={region} 
      canonical={canonical} 
    />
    
    <link rel="icon" type="image/svg+xml" href={favicon.src} />
    <ClientRouter />
    
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-RD2XZW9K8V"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-RD2XZW9K8V');
    </script>
    
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" defer></script>
  </head>
  <body class="bg-stone-950 text-stone-100 font-sans">
    <slot />
  </body>
</html>
